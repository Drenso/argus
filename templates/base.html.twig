{% set currentRoute = app.request.attributes.get('_route') %}
{% if currentRoute == "" %}
  {% set currentRoute = "homepage" %}
{% endif %}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{{ 'brand.argus'|trans }}</title>

  {# Favicon as generated by https://realfavicongenerator.net #}
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="msapplication-TileColor" content="#1e3c71">
  <meta name="theme-color" content="#ffffff">
  <meta name="apple-mobile-web-app-title" content="{{ 'brand.argus'|trans }}">
  <meta name="application-name" content="{{ 'brand.argus'|trans }}">

  <!-- Default CSS -->
  {% block default_stylesheets %}
    {{ encore_entry_link_tags('minimal') }}
  {% endblock %}

  <!-- Included CSS -->
  {% block stylesheets %}{% endblock %}

  <!-- Default JS -->
  {% block sentry_config %}
    {% if sentry_dsn is not null %}
      <script type="text/javascript">
        window.SENTRY_DSN = '{{ sentry_dsn }}';
        window.SENTRY_RELEASE = '{{ sentry_release }}';
      </script>
    {% endif %}
  {% endblock %}
  {% block default_javascripts %}
    {{ encore_entry_script_tags('minimal') }}
    <script type="text/javascript">
      window.HAS_MULTIPLE_HOSTS = true;
    </script>
  {% endblock %}

  <!-- Included JS -->
  {% block javascripts %}{% endblock %}
</head>
{% block base_body %}
  <body>
  <div id="app">
    <div class="init-loader">
      <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="circle-notch" role="img"
           xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
           class="loader-icon svg-inline--fa fa-circle-notch fa-w-16 fa-spin fa-8x">
        <path fill="currentColor"
              d="M288 39.056v16.659c0 10.804 7.281 20.159 17.686 23.066C383.204 100.434 440 171.518 440 256c0 101.689-82.295 184-184 184-101.689 0-184-82.295-184-184 0-84.47 56.786-155.564 134.312-177.219C216.719 75.874 224 66.517 224 55.712V39.064c0-15.709-14.834-27.153-30.046-23.234C86.603 43.482 7.394 141.206 8.003 257.332c.72 137.052 111.477 246.956 248.531 246.667C393.255 503.711 504 392.788 504 256c0-115.633-79.14-212.779-186.211-240.236C302.678 11.889 288 23.456 288 39.056z"></path>
      </svg>
      <div class="loader-text" style="">{{ 'brand.loading'|trans }}</div>
    </div>
  </div>
  {% block content %}{% endblock %}

  <!-- Included CSS -->
  {% block stylesheets_bottom %}
    {{ encore_entry_link_tags('layout') }}
    {{ encore_entry_link_tags('app') }}
  {% endblock %}

  {# <!-- Included JS --> #}
  {% block javascripts_bottom %}
    {{ encore_entry_script_tags('layout') }}
    {{ encore_entry_script_tags('app') }}
  {% endblock %}
  </body>
{% endblock %}
</html>
